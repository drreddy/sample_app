<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <hr/>
	  <%= form_tag @path, :method => 'get' do%>
		<div style="float:left"><%= text_field_tag :search, params[:search], placeholder: "Search for users..." %></div> 
		<div style="float:right; padding-right:20px; "><%= submit_tag "Search", class: "btn btn-large btn-info", :name => 'nil' %></div>
	  <% end %>
    </section>
  </aside>
  <div class="span8">
    <center><h3><%= @title %></h3></center>
	<br/>
	<%= will_paginate %>
    <% if @users.any? %>
      <ul class="users">
		<% @users.each do |user| %>
		    <li>
				<%= gravatar_for user, size: 10 %>
				<%= link_to user.name, user %>
			</li>
        <% end %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>